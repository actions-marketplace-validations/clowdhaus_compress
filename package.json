{
  "name": "compress",
  "version": "0.0.0",
  "description": "Github action to compress executable binaries using upx ",
  "repository": {
    "type": "git",
    "url": "git@github.com:clowdhaus/compress.git"
  },
  "keywords": [
    "actions",
    "compress",
    "upx",
    "binary"
  ],
  "author": "Clowd Haus, LLC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/clowdhaus/compress/issues"
  },
  "homepage": "https://github.com/clowdhaus/compress#readme",
  "private": true,
  "main": "lib/main.js",
  "scripts": {
    "format": "prettier --write **/*.ts",
    "lint": "eslint src/**/*.ts --quiet --fix",
    "compile": "tsc && ncc build",
    "commit": "npx git-cz",
    "release": "semantic-release",
    "all": "yarn run format && yarn run lint && yarn run compile"
  },
  "dependencies": {
    "@actions/core": "^1.2.3"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "@zeit/ncc": "^0.22.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-github": "^3.4.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "semantic-release": "^17.0.4",
    "typescript": "^3.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "release": {
    "branches": [
      "master"
    ],
    "ci": false,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
