{
  "name": "compress",
  "version": "0.0.0",
  "description": "Github action to compress executables using upx",
  "repository": {
    "type": "git",
    "url": "git@github.com:clowdhaus/compress.git"
  },
  "keywords": [
    "actions",
    "compress",
    "upx",
    "binary"
  ],
  "author": "Clowd Haus, LLC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/clowdhaus/compress/issues"
  },
  "homepage": "https://github.com/clowdhaus/compress#readme",
  "private": true,
  "main": "lib/main.js",
  "scripts": {
    "format": "prettier --write **/*.ts",
    "lint": "eslint src/**/*.ts --quiet --fix",
    "compile": "tsc && ncc build -m",
    "commit": "npx git-cz",
    "release": "semantic-release",
    "all": "yarn run format && yarn run lint && yarn run compile"
  },
  "dependencies": {
    "@actions/core": "^1.2.7",
    "@actions/exec": "^1.0.4",
    "@actions/io": "^1.1.0",
    "@actions/tool-cache": "^1.6.1",
    "@octokit/rest": "^18.5.3",
    "download": "^8.0.0",
    "string-argv": "^0.3.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/download": "^6.2.4",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@vercel/ncc": "^0.28.4",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-github": "^4.1.3",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "semantic-release": "^17.4.2",
    "typescript": "^4.2.4"
  },
  "resolutions": {
    "mem": "^8.0.0",
    "yargs-parser": "^20.2.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "ci": false,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
